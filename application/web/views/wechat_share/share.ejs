<script>
    var title  = '<%= member.wechat_name ? (member.wechat_name + "的") : "曼泽"%>心愿单';
    var link   = location.href; //"index?user_id=<%= member.user_id || ''%>&key=<%= member.user_key || ''%>";
    var imgUrl = '<%= config.share_list_icon || ""%>';
    var desc   = '<%= config.share_list_desc || ""%>';
    var type   = 'link';
    var dataUrl = '';
    var imgDefault = '<%= config.share_list_icon || ""%>';
</script>

<script src="https://res.wx.qq.com/open/js/jweixin-1.6.0.js"></script>
<script>
    wx.config({
        debug: false, // 开启调试模式1,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
        appId: '<%= share.appId || ""%>', // 必填，公众号的唯一标识
        timestamp: '<%= share.timeStamp || ""%>', // 必填，生成签名的时间戳
        nonceStr: '<%= share.nonceStr || ""%>', // 必填，生成签名的随机串
        signature: '<%= share.signature || ""%>',// 必填，签名
        jsApiList: ['updateAppMessageShareData','updateTimelineShareData'] // 必填，需要使用的JS接口列表
    });
    wx.error(function() {
        //在微信中滚动到离开页面时的高度
        if (typeof(data) != "undefined" && data.scrollTop) document.documentElement.scrollTop = data.scrollTop;
    });
    wx.ready(function(){
        //在微信中滚动到离开页面时的高度
        if (typeof(data) != "undefined" && data.scrollTop) {
            document.documentElement.scrollTop = data.scrollTop;
            document.body.scrollTop = data.scrollTop;
        }

        // 分享到朋友圈或分享到QQ空间
        wx.updateTimelineShareData({
            title: title, // 分享标题
            link: link, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
            imgUrl: imgUrl == ''?imgDefault:imgUrl, // 分享图标
            success: function () {
                // 用户确认分享后执行的回调函数
            },
            cancel: function () {
                // 用户取消分享后执行的回调函数
            }
        });

        // 分享给朋友或分享到QQ
        wx.updateAppMessageShareData({
            title: title, // 分享标题
            desc: desc, // 分享描述
            link: link, // 分享链接，该链接域名或路径必须与当前页面对应的公众号JS安全域名一致
            imgUrl: imgUrl == ''?imgDefault:imgUrl, // 分享图标
            success: function () {
                // 用户确认分享后执行的回调函数
            },
            cancel: function () {
                // 用户取消分享后执行的回调函数
            }
        });
    });

</script>
